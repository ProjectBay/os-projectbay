{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "chore",
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "test"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      ["ngx-mat-shell", "ngx-mat-shell-docs", "ngx-mat-shell-demo"]
    ]
  }
}
